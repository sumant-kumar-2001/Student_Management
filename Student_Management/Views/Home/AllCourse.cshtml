@model IEnumerable<Course>
@{
    ViewData["Title"] = "AllCourse";
}


<div class=" row pt-4">
    <div class="col-6">
        <form method="get" asp-controller="Home" asp-action="AllCourse" class="d-flex col-6">
            <input class="form-control me-sm-2" type="text" placeholder="Name..." name="term" value="@ViewBag.SearchStr">
            <button class="btn btn-secondary my-2 my-sm-0 me-sm-2" type="submit">Search</button>
        </form>
    </div>
    <div class=" col-6 text-end">
        <div>
            <a asp-controller="Home" asp-action="AddCourse"
               class="btn btn-outline-primary mx-2"> <i class="bi bi-pencil-square"></i> Add-Course </a>
        </div>
    </div>
</div>

<div class="container p-3">
    <div class=" row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Course List </h1>
        </div>
    </div>

    <br /><br />
    <table class="table table-bordered table-striped" style="width:70%">
        <thead>
            <tr>
                <th>
                    Course Id
                </th>
                <th>
                    Course
                </th>
                <th>
                    Price
                </th>

                <th>Action</th>

            </tr>

        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="10%">@obj.CourseId</td>
                    <td width="10%">
                        @obj.CourseName
                    </td>
                    <td width="5%">
                        @obj.CoursePrice
                    </td>
                             
          <td width="30%">
                        <div>
                            <a asp-controller="Home" asp-action="AddCourse" asp-route-id="@obj.CourseId"
                           class="btn btn-outline-success mx-2"> <i class="bi bi-pencil-square"></i> Edit </a>
                            <a asp-controller="Home" asp-action="Deletecourse" asp-route-id="@obj.CourseId"
                           class="btn btn-outline-danger mx-2"> <i class="bi bi-pencil-square"></i> Delete </a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <div class="col-6 col-md-3">
        <a asp-controller="Home" asp-action="StudentData" class="btn btn-outline-primary border form-control ">Back</a>
    </div>
</div>