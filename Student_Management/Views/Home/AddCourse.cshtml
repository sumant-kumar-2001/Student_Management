@model Course
@{
    ViewData["Title"] = "AddCourse";
}

<form asp-action="AddCourse" method="post" enctype="multipart/form-data">
    <input asp-for="CourseId" hidden />

    <div class="border p-3 mt-4">
        @if(Model.CourseId == 0)
        {
            <div class="row pb-2">
                <h2 class="text-primary pl-3 text-center"> Add Course</h2>
            </div>
        }
        else
        {
              <div class="row pb-2">
                <h2 class="text-primary pl-3 text-center"> Update Course</h2>
            </div>
        }
        <div class="mb-3">
            <label asp-for="CourseName"></label>
            <input asp-for="CourseName" class="form-control" required />
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>
        <br />
        <div class="mb-3">
            <label asp-for="CoursePrice"></label>
            <input asp-for="CoursePrice" class="form-control" required min="1" />
            <span asp-validation-for="CoursePrice" class="text-danger"></span>
        </div>







        <div class="mb-3">
  

        <br />
            @if(Model.CourseId == 0)
            {
                  <div>
                <button type="submit" class="btn btn-primary">Add </button>
                    <a asp-controller="Home" asp-action="AllCourse"
                   class="btn btn-outline-dark mx-2"> <i class="bi bi-pencil-square"></i> Back </a>
                </div>
            }
            else
            {
                     <div>
                <button type="submit" class="btn btn-primary">Update </button>
                    <a asp-controller="Home" asp-action="AllCourse"
                   class="btn btn-outline-dark mx-2"> <i class="bi bi-pencil-square"></i> Back </a>
                </div>
            }
      
        <br />

    </div>
    </div>
</form>

